#!/usr/bin/env python3
import random
import colors as c
import time as t
n = 0
sym = ['/',']','+','|','=']
col = [c.red,c.blue]
while True:
    print(c.clear + c.random_color() + """
                      _______ _       _       _______    _______ _______ _______ _______ _       _______ 
             |\     /(  ____ ( \     ( \     (  ___  )  (  ____ (  ____ (  ___  (  ____ ( \     (  ____ |
             | )   ( | (    \| (     | (     | (   ) |  | (    )| (    \| (   ) | (    )| (     | (    \/
             | (___) | (__   | |     | |     | |   | |  | (____)| (__   | |   | | (____)| |     | (__    
             |  ___  |  __)  | |     | |     | |   | |  |  _____|  __)  | |   | |  _____| |     |  __)   
             | (   ) | (     | |     | |     | |   | |  | (     | (     | |   | | (     | |     | (      
             | )   ( | (____/| (____/| (____/| (___) |  | )     | (____/| (___) | )     | (____/| (____/|
             |/     \(_______(_______(_______(_______)  |/      (_______(_______|/      (_______(_______/
                                                                                                         
    """)
    n += 1
    print(n)
    if n > 104:
        rb = random.choice(col)
        print(c.clear + rb + """
 _______           _______  _______  _        _______  _______  ______  
(  ___  )|\     /|(  ____ \(  ____ )( \      (  ___  )(  ___  )(  __  \ 
| (   ) || )   ( || (    \/| (    )|| (      | (   ) || (   ) || (  \  )
| |   | || |   | || (__    | (____)|| |      | |   | || (___) || |   ) |
| |   | |( (   ) )|  __)   |     __)| |      | |   | ||  ___  || |   | |
| |   | | \ \_/ / | (      | (\ (   | |      | |   | || (   ) || |   ) |
| (___) |  \   /  | (____/\| ) \ \__| (____/\| (___) || )   ( || (__/  )
(_______)   \_/   (_______/|/   \__/(_______/(_______)|/     \|(______/ 
                                                                        
""")
        t.sleep(1)
        while True:
            syn = random.choice(sym)
            print(c.random_color() + syn , end= ' ')
    t.sleep(.1)
    print(c.clear)
